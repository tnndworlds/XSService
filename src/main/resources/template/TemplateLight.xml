<?xml version="1.0" encoding="UTF-8"?>
<viewTemplate>
    <module>
        <name>allLightProduct</name>
        <contents>
            <content>
                <key>data</key>
                <sysParam></sysParam>
                <type>SQL</type>
                <value>
                    <![CDATA[
						SELECT * FROM TBL_XS_PRODUCT
                        WHERE 1=1
						<#if ID?? >
							AND ID LIKE '%${ID}%'
						</#if>
						<#if NAME?? >
							AND NAME LIKE '%${NAME}%'
						</#if>
						<#if XS3C?? >
							AND XS3C LIKE '%${XS3C}%'
						</#if>
						<#if CATEGORY?? >
							AND CATEGORY LIKE '%${CATEGORY}%'
						</#if>
					]]>
                </value>
                <dataAdapter></dataAdapter>
            </content>
        </contents>
    </module>
    <module>
        <name>getProductDetail</name>
        <contents>
            <content>
                <key>basicInfo</key>
                <sysParam></sysParam>
                <type>SQL</type>
                <value>
                    <![CDATA[
						SELECT * FROM TBL_XS_PRODUCT WHERE ID='${ID}'
					]]>
                </value>
                <dataAdapter>com.mailang.tquery.dataadapter.RecordToMap</dataAdapter>
            </content>
            <content>
                <key>specifications</key>
                <sysParam></sysParam>
                <type>SQL</type>
                <value>
                    <![CDATA[
						SELECT TS.*,TP.NAME AS VENDER_NAME, TPV.PRODUCT_ADDRESS AS PRODUCT_ADDRESS FROM TBL_XS_SPEC TS
                            LEFT JOIN TBL_XS_VENDER TP ON TS.VENDER_ID=TP.ID
                            LEFT JOIN TBL_XS_PRODUCT_VENDER TPV ON TS.PRODUCT_ID=TPV.PRODUCT_ID AND TS.VENDER_ID=TPV.VENDER_ID
                        WHERE TS.PRODUCT_ID='${ID}';
					]]>
                </value>
                <dataAdapter></dataAdapter>
            </content>
        </contents>
    </module>
</viewTemplate>